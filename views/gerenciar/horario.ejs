          </table>   
          
         
          <a class="btn btn-primary no-print" href="/horario" role="button"><i class="fas fa-backward"></i></a>
        </div>
      </div>
    </div>
    <script>
      function confirmarDelecao(event, form) {
        event.preventDefault();
        var decision = confirm("Você deseja deletar esse item?");
        if (decision) {
          form.submit();
        }
      }
    </script>

