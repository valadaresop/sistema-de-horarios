            <tbody>
              <% horarios.forEach(horario=>{ %>
                
              <tr>
               <td><%=horario.aulah2%></td>
                
    
                <td> <h6><%=horario.disc2%></h6>
                  <p><small class="text-muted"><%=horario.prof2%></small></p> 
                 </td>
              
                 
                 <td><h6><%=horario.disc3%></h6>
