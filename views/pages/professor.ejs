<%- include("../partials/header"); %>
    <%- include("../partials/menu"); %>
        <br>
        <div class="container">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="card " style="width: 60rem;">
                    <h4 class="card-header"> Cadastro Professor</h4>
                    <form action="/professor/save" method="POST">

                        <div class="form-row m-2">
                            <div class="form-group col-md-6">
                                <label>Nome</label>
                                <input type="text" class="form-control" name="nomep">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Disciplina Anterior</label>
                                <input type="text" class="form-control" name="anteriorp">
                            </div>
                        </div>

                        <div class="form-row m-2">
                            <div class="form-group col-md-6">
                                <label>Preferência Disciplina</label>
                                <input type="text" class="form-control" name="prefdp">
                            </div>
                            <div class="form-group col-md-3">
                                <label>Preferência de Turno</label>
                                <select class="form-control" name="turnop">
                                    <option selected>Selecione</option>
                                    <option>Matutino</option>
                                    <option>Verspetino</option>
                                    <option>Noturno</option>
                                </select>
                            </div>

                            <div class="form-group col-md-3">
                                <label>Dias da Semana</label>
                                <select class="form-control" name="semanap">
                                    <option selected>Selecione</option>
                                    <option>Seg</option>
                                    <option>Ter</option>
                                    <option>Qua</option>
                                    <option>Qui</option>
                                    <option>Sex</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group m-3">
                            <label>Observações</label>
                            <textarea class="form-control" name="obsp" rows="2"></textarea>
                        </div>

                       
                        <button type="submit" class="btn btn-success mt-3 mb-3 ml-3">Salvar</button>
                        <a href="/gerenciar/professor" class="btn btn-primary mt-3 mb-3 ml-2 ">Gerenciar</a>
                        
                    </form>
                </div>
            </div>
        </div><br>
        <hr>
        <%- include("../partials/footer"); %>